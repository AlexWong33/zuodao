<div class="checkout">
  <div class="page-header">
    <h2>结算</h2>
  </div>
  <p>填写并核对订单信息</p>
  <%= simple_form_for [:account, @order] do |f| %>
  <div class="panel panel-default">
    <div class="panel-body">
      <div class="checkout-address">
        <h4>收货信息</h4>
        <input type="hidden" name="selected_address" value="<%= current_user.default_address.nil? ? '' : current_user.default_address.id %>" id="selected-address"/>
        <input type="hidden" value="<%= current_user.addresses.count %>" id="addresses-count"/>
        <div class="address-list">
          <table class="table">
            <% @addresses.each_with_index do |address, index| %>
            <tr>
              <td>
                <div class="address-label">
                  <a href="" class="btn btn-<%= address.default? ? 'danger' : 'default' %>" id="address-<%= index %>">
                    <%= address.label %>
                  </a>
                  <input type="hidden" value="<%= address.id %>" id="address-id-<%= index %>"/>
                </div>
              </td>
              <td><%= address.name %></td>
              <td><%= address.address %></td>
              <td><%= address.cellphone %></td>
            </tr>
            <% end %>
          </table>
        </div>
      </div>
      <div class="checkout-pay-method"></div>
      <div class="checkout-details">
        <%= @cart_items %>
      </div>
      <div class="checkout-summry"></div>
    </div>
  </div>
  <%= f.button :submit, value: "提交订单", class: "btn btn-danger pull-right" %>
  <% end %>
</div>
