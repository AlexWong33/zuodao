<div class="panel panel-default">
  <div class="panel-heading">
    <h4>用户列表
      <%= link_to "<i class='fa fa-plus' aria-hidden='true'></i> 新增".html_safe, new_admin_user_path, class: "btn btn-default pull-right" %>
    </h4>
  </div>
  <div class="panel-body">
    <table class="table">
      <thead>
        <tr>
          <th>#</th>
          <th>E-mail</th>
          <th>操作</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each_with_index do |user, index| %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= user.email %></td>
            <td>
              <%= link_to '编辑', edit_admin_user_path(user), class: "btn btn-default btn-sm" %>
              <%= link_to '删除', admin_user_path(user),class: "btn btn-danger btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="panel-footer text-center">
    <%= will_paginate @users, renderer: BootstrapPagination::Rails %>
  </div>
</div>
