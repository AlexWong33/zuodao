<%= simple_form_for [:admin, @product] do |f| %>
  <%= f.input :title, label: "名称" %>
  <%= f.input :description, label: "描述" %>
  <%= f.input :price, label: "价格" %>
  <%= f.input :quantity, label: "库存" %>
  <%= f.input :category_id, label: "分类", as: :select, collection: @categories %>
  <!-- 多图片上传 -->
  <div class="form-group">
    <%= f.label "Images" %>
    <%= f.file_field :images, multiple: true %>
  </div>
  <!-- 图片预览 -->
  <%= render "images_preview" %>
  <%= link_to("取消", admin_products_path, class: "btn btn-raised btn-white") %>
  <%= f.submit "保存", data: {disable_with: "正在保存..."}, class: "btn btn-raised btn-success" %>
<% end %>
