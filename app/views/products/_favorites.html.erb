<% if current_user && current_user.favorited?(product) %>
  <%= link_to dislikes_account_favorite_path(product), method: :post, remote: true, class: "card-favorites favorited" do %>
    <%= product.favorites_count %> <%= mi.favorite %>
  <% end %>
<% else %>
  <%= link_to favorite_account_favorite_path(product), method: :post, remote: true, class: "card-favorites" do %>
    <%= product.favorites_count %> <%= mi.favorite %>
  <% end %>
<% end %>
