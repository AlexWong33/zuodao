<% case @order.aasm_state %>
<% when "placed"%>
  <%= link_to("取消订单", apply_for_cancel_account_order_path(@order), method: :post, class: "btn btn-white #{size}") %>
<% when "paid" %>
  <%= link_to("申请退款", apply_for_cancel_account_order_path(@order), method: :post, class: "btn btn-white #{size}") %>
<% when "applying_for_cancel" %>
  <span class="btn btn-info disabled <%= size %>">审核中</span>
<% when "shipping" %>
  <%= link_to("确认收货", confirm_receipt_account_order_path(@order), method: :post, class: "btn btn-white #{size}") %>
<% when "shipped" %>
  <%= link_to("申请退货", apply_for_return_account_order_path(@order), method: :post, class: "btn btn-white #{size}") %>
<% when "applying_for_return" %>
  <span class="btn btn-warning disabled <%= size %>">退货中</span>
<% when "returned" %>
  <span class="btn btn-defalut disabled <%= size %>">已退货</span>
<% end %>
