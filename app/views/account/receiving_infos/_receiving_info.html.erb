<tr>
  <td>
    <h4>
      <label class="label label-<%= receiving_info.default? ? 'success' : 'default'%>"><%= receiving_info.label %></label>
    </h4>
  </td>
  <td><%= receiving_info.name %></td>
  <td><%= receiving_info.cellphone %></td>
  <td><%= receiving_info.address %></td>
  <td>
    <% unless receiving_info.default? %>
      <%= link_to '设为默认', set_default_account_receiving_info_path(receiving_info), method: :post, remote: true, class: "btn btn-success btn-xs" %>
    <% end %>
    <%= link_to '编辑', edit_account_receiving_info_path(receiving_info), class: "btn btn-default btn-sm" %>
    <%= link_to '删除', account_receiving_info_path(receiving_info),class: "btn btn-danger btn-sm",
    method: :delete, data: { confirm: "您确定删除#{receiving_info.name}这条收货信息吗？" } %>
  </td>
</tr>
