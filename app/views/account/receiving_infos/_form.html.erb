<%= simple_form_for [:account, @receiving_info] do |f| %>
  <div class="form-inputs">
    <%= f.input :label, label: "标签", placeholder: "如：公司、家" %>
    <%= f.input :name, label: "收货人" %>
    <%= f.input :cellphone, label: "手机号" %>
    <%= f.input :address, label: "详细地址" %>
  </div>
  <div class="form-actions">
    <%= f.submit "保存", data: {disable_with: "正在保存..."}, class: "btn btn-default" %>
    <%= f.submit "保存并设为默认", data: {disable_with: "正在保存..."}, class: "btn btn-success" %>
  </div>
<% end %>
