<a href="<%= carts_path %>" class="dropdown-toggle">
  <i class="fa fa-shopping-cart fa-2x" aria-hidden="true"></i>
  <span class="badge text-info">
    <%= current_cart.cart_items_count %>
  </span>
</a>
<ul class="dropdown-menu cart-nav-content">
  <% @cart_items = current_cart.get_items %>
  <% if @cart_items.present? %>
    <% @cart_items.each_with_index do |item, index| %>
      <% if index != 0 %>
        <li class="divider"></li>
      <% end %>
      <li class="cart-item">
        <div class="media">
          <div class="media-left media-top">
            <%= link_to(product_path(item.product)) do %>
              <%= render_product_image(item.product, "cart-img") %>
            <% end %>
          </div>
          <div class="media-body">
            <h5 class="media-heading">
              <%= item.product.title %>
            </h5>
            <p><%= render_text(item.product.description) %></p>
          </div>
          <div class="media-right">
            <p id="cart-item-quantity-<%= index %>">× <%= item.quantity %></p>
            <small>
              <%= link_to("删除", cart_item_path(item), class: "cart-btn-delete", method: :delete, remote: true) %>
            </small>
          </div>
        </div>
      </li>
    <% end %>
    <li class="divider"></li>
    <li>
      <div class="cart-bottom">
        <b><%= current_cart.cart_items_count %></b>门课程
        共计：<b>¥ <%= render_price(current_cart.total_price) %></b>
        <%= link_to("去购物车", carts_path, class: "btn btn-raised btn-danger btn-xs pull-right btn-to-cart") %>
      </div>
    </li>
  <% else %>
    <li class="cart-empty">
      <h6>
        <%= fa_icon("shopping-cart fa-lg", text: "购物车空空如也！~") %>
      </h6>
    </li>
  <% end %>
</ul>
